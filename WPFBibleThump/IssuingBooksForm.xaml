<Window x:Class="WPFBibleThump.IssuingBooksForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBibleThump"
        mc:Ignorable="d"
        Title="IssuingBooksForm" Height="543.382" Width="1230">
    <Grid>
       
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Читатель"/>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top">
                <Label Content="Pole dlya poiska:" Width="130" Height="30"/>
                <TextBox  Width="100" Height="20"/>
                <Label Content="Номер чит. билета:" Width="130" Height="30"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="100" Height="20"/>
                <Label Content="Имя:" Width="40" Height="30"/>
                <TextBox Text="{Binding Имя}" Width="100" Height="20"/>
                <Label Content="Отчество:" Width="65" Height="30"/>
                <TextBox Text="{Binding Отчество}" Width="100" Height="20"/>
                <Label Content="Фамилия:" Width="65" Height="30"/>
                <TextBox Text="{Binding Фамилия}" Width="100" Height="20"/>
                <Label Content="Дата регистрации:" Width="70" Height="30"/>
                <TextBox Text="{Binding Дата_регистрации}" Width="100" Height="20"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top">
                <Label Content="Телефон:" Width="65" Height="30"/>
                <TextBox Text="{Binding Телефон}" Width="100" Height="20"/>
                <Label Content="Улица:" Width="55" Height="30"/>
                <TextBox Text="{Binding Улицы.Название}" Width="100" Height="20"/>
                <Label Content="Дом:" Width="45" Height="30"/>
                <TextBox Text="{Binding Номер_дома}" Width="100" Height="20"/>
                <Label Content="Квартира:" Width="70" Height="30"/>
                <TextBox Text="{Binding Квартира}" Width="100" Height="20"/>
                <Label Content="Дата перерегистрации:" Width="70" Height="30"/>
                <TextBox Text="{Binding Дата_перерегистрации}" Width="100" Height="20"/>
                <Button Content="Выдать книгу"/>
                <Label Content="Sdelat nije poisk knigi:" Width="150" Height="30"/>
            </StackPanel>
            <Label DockPanel.Dock="Top" Content="Книга"/>
            <DataGrid ItemsSource="{Binding Readers}" DockPanel.Dock="Top" Height="300" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Инв. номер" Binding="{Binding Path=Выданные_книги.Инвентарный_номер}" Width="auto" />
                    <DataGridTextColumn Header="Название" Binding="{Binding Path=Выданные_книги.Экземпляры_книги.Книги.Название}" Width="auto" />
                    <DataGridTextColumn Header="Дата выдачи" Binding="{Binding Path=Выданные_книги.Дата_выдачи}" Width="auto" />
                    <DataGridTextColumn Header="Дата возврата" Binding="{Binding Path=Выданные_книги.Дата_возврата}" Width="auto" />
                    <DataGridTextColumn Header="Выдано (дней назад)" Width="auto" />
                </DataGrid.Columns>
            </DataGrid>
            <Button HorizontalAlignment="Left" Content="Вернуть книгу" DockPanel.Dock="Top"/>
        </DockPanel>
    </Grid>
</Window>
